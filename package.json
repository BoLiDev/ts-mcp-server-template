{
  "name": "ts-mcp-server-template",
  "version": "1.0.0",
  "description": "TypeScript template project with ESLint 9, Husky, Commitlint, and Prettier",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "start": "node dist/index.js",
    "dev": "npm-run-all build --parallel dev:build dev:serve",
    "dev:build": "rollup -c --watch",
    "dev:serve": "mcp-inspector node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "typescript",
    "hello-world",
    "eslint",
    "prettier",
    "husky"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.0.0",
    "@jest/types": "^29.6.3",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "is-ci-cli": "^2.2.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rollup": "^4.41.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/inspector": "^0.13.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "express": "^5.1.0",
    "qrcode": "^1.5.4"
  }
}
